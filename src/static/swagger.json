{
    "swagger": "2.0",
    "info": {
        "title": " pyre - Python Rule Engine API",
        "version": "1.0.0",
        "description": "Rule Engine built for Gentera"
    },
    "paths": {
        "/engine/api/v1/hello": {
            "get": {
                "tags": [
                    "Healt Check"
                ],
                "description": "Hello world for health check.",
                "produces": [
                    "application/text"
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/engine/api/v1/workflows": {
            "post": {
                "tags": [
                    "Workflows"
                ],
                "description": "Create a new Workflow base.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "Workflow Data",
                        "in": "body",
                        "description": "Workflow definition.",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/NewWorkflow"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Workflow created"
                    },
                    "400": {
                        "description": "Invalid request data"
                    }
                }
            }
        }
    },
    "definitions": {
        "NewWorkflow": {
            "type": "object",
            "properties": {
                "name": {
                    "description": "Workflow name.",
                    "type": "string",
                    "minLength": 5,
                    "maxLength": 50,
                    "required": true,
                    "example": "wf.account.products"
                },
                "is_node": {
                    "description": "Means if workflow can derivate in many routes.",
                    "type": "boolean",
                    "required": true
                },
                "success_action_id": {
                    "description": "Action ID for success result.",
                    "type": "integer"
                },
                "failure_action_id": {
                    "description": "Action ID for failure result.",
                    "type": "integer"
                }
            }
        }
    }
}
